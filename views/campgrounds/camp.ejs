<% include ../partials/header %>
<h1><%=currentUser%></h1>
<div class="container">
    <div class="jumbotron">
        <div class="container">
             <h1>Welcome to the camp page</h1>  
               <a class="btn btn-primary btn-lg" href="/camp/new">Add a new camp</a>
        </div>
   
    </div>


    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campground.forEach(function(camp){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              
              <img src="<%=camp.image%>">
                <div class="caption">
                <li><%=camp.name%></li>    
            </div>
            <div>
                <a href="/camp/<%= camp._id %>" class="btn btn-primary">More info</a>
            </div>
            </div>
               
        </div>
        <%})%>
    </div>
    
</div>



<% include ../partials/footer %>